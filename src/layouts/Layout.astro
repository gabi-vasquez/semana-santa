---
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";
import { ViewTransitions } from 'astro:transitions';

import "@fontsource-variable/onest";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <Nav />
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  :root {
  }

  html {
    font-family: "Onest Variable", system-ui, sans-serif;
  }

  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  h1 {
    color: #610361;
    text-wrap: balance;
    text-align: center;
    margin-bottom: 1rem;
	font-size: 2.5rem;
  }

  main {
    display: flex;
    flex-direction: column;
    justify-content: center;
    max-width: 50rem;
    margin: 0 auto;
  }

  section {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }

  h2 {
    text-wrap: balance;
	text-align: center;
    font-size: 2rem;
  }

  p {
    text-wrap: pretty;
	max-width: 50rem;
  }

  img{
    border-radius: 5%;
  }
</style>
